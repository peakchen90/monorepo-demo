{
  "version": "0.0.3",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "useNx": false,
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "message": "chore(release): publish",
      "private": true
    },
    "version": {
      "exact": true
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
